<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="me.camsteffen.polite.ui.rule.edit.EditRuleViewModel" />
    </data>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/enable"
                style="@style/Option.Switch"
                android:checked="@={model.enabled}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable"/>
            <View style="@style/Divider"/>
            <Switch
                android:id="@+id/vibrate"
                style="@style/Option.Switch"
                android:checked="@={model.vibrate}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vibrate"/>
            <View style="@style/Divider"/>
            <Switch
                android:id="@+id/muteMedia"
                style="@style/Option.Switch"
                android:checked="@={model.muteMedia}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mute_media"/>
            <View style="@style/Divider"/>
            <me.camsteffen.polite.ui.DropDownOption
                android:id="@+id/exceptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/exceptions"
                app:menu="@menu/exceptions"
                app:value="@={model.exceptions}"
                />
            <View style="@style/Divider"/>
            <FrameLayout
                android:id="@+id/editRule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</layout>
